{
  "Database": {
    "Provider": "SqlServer",
    "CommandTimeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false
  },
  "Jwt": {
    "Issuer": "Erp.API",
    "Audience": "Erp.Client",
    "AccessMinutes": 30,
    "RefreshDays": 7
  },
  "Admin": {
    "Email": "admin@erp.com",
    "FullName": "System Administrator",
    "ForcePasswordChange": true
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}